<script type="text/javascript">

  var relative_base = "<%= @relative_base_path %>";
  var search_objects = $.parseJSON('<%= search_object_string %>');

	var sidebarData = [
	    { "name" : "Guides", "link" : [] },
	    { "name" : "Examples", "link" : [] },
	    { "name" : "API reference", "link" : [] }
	];

  // populate examples links
	for(var index in search_objects.examples)
	{
	  example = search_objects.examples[index]
	  sidebarData[1].link.push({"name": example.name, "link": relative_base + "/" + example.path.split(".").join("/") + ".html"});
	}
	
	// populate guides links
	sidebarData[0].link = $.parseJSON('<%= $guides.sidebar_links_json(@relative_base_path) %>');
	
	// populate API reference links
	sidebarData[2].link = $.parseJSON('<%= $packages.sidebar_links_json(@relative_base_path) %>');            

	
</script>

